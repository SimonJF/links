typename Doc(a :: Type(Any, Any)) =
  [| DocTextNode: (String)
   | DocTagNode:
      (tagName: String, attrs: [(String, String)],
       eventHandlers: [VirtualHandler(a)],
       children: [Doc(a)])
   |];

